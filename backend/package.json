{
  "name": "retail-management-system-backend",
  "version": "1.0.0",
  "description": "Backend for retail management system",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:init": "node src/scripts/initDb.js",
    "db:reset": "node src/scripts/initDb.js --force",
    "db:seed": "node src/scripts/initDb.js --seed",
    "db:reset-seed": "node src/scripts/initDb.js --force --seed",
    "create:admin": "node src/scripts/createAdmin.js",
    "generate:key": "node src/scripts/generateSecretKey.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.5.2",
    "sequelize": "^6.32.1",
    "winston": "^3.10.0",
    "express-async-errors": "^3.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/scripts/**",
      "!src/tests/**"
    ]
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "js,json",
    "ignore": ["src/tests/**", "src/**/*.test.js"],
    "delay": "2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
