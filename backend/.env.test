# Application
NODE_ENV=test
PORT=3001

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=root
DB_NAME=retail_management_test

# JWT
JWT_SECRET=test-secret-key-for-testing-purposes-only

# CORS
CORS_ORIGIN=http://localhost:8000

# Logging
LOG_LEVEL=error

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Test Specific
SKIP_AUTH=true
ENABLE_TEST_HELPERS=true
TEST_TIMEOUT=5000
MOCK_EXTERNAL_SERVICES=true

# Test User
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test@123
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=Admin@123

# Test Database Config
# Using different port/credentials for test database to avoid conflicts
TEST_DB_PORT=3307
TEST_DB_NAME=retail_management_test
TEST_DB_USER=test_user
TEST_DB_PASS=test_password

# Mock External Services
MOCK_SMTP_SERVER=true
MOCK_PAYMENT_GATEWAY=true
MOCK_NFE_SERVICE=true

# Test File Storage
TEST_UPLOAD_DIR=./test-uploads

# Test Cache
TEST_CACHE_DRIVER=memory
TEST_CACHE_PREFIX=test_

# Test Queue
TEST_QUEUE_DRIVER=sync

# Test Search
TEST_SEARCH_DRIVER=memory

# Test Metrics
TEST_METRICS_ENABLED=false

# Test Feature Flags
TEST_FEATURE_FLAGS_ENABLED=true
TEST_FEATURE_NEW_DASHBOARD=true
TEST_FEATURE_ADVANCED_REPORTS=false

# Test API Keys
TEST_API_KEY=test_api_key_123
TEST_WEBHOOK_SECRET=test_webhook_secret_456

# Test Timeouts
TEST_API_TIMEOUT=1000
TEST_DB_TIMEOUT=1000
TEST_CACHE_TIMEOUT=500

# Test Retries
TEST_MAX_RETRIES=1
TEST_RETRY_DELAY=100

# Test Batch Processing
TEST_BATCH_SIZE=10
TEST_MAX_BATCH_SIZE=50

# Test Rate Limiting
TEST_RATE_LIMIT_ENABLED=false
TEST_RATE_LIMIT_REQUESTS=1000
TEST_RATE_LIMIT_WINDOW=60

# Test Security
TEST_ENABLE_2FA=false
TEST_PASSWORD_POLICY_ENABLED=false
TEST_SESSION_TIMEOUT=3600

# Test Monitoring
TEST_ENABLE_LOGGING=false
TEST_ENABLE_METRICS=false
TEST_ENABLE_TRACING=false
